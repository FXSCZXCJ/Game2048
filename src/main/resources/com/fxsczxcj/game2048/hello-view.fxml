<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:id="vbox"
      fx:controller="com.fxsczxcj.game2048.HelloController"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
>
    <children>

        <Label
                fx:id="titleText"
                text="2048">
            <font>
                <Font name="Consolas" size="40.0"/>
            </font>
        </Label>
        <GridPane fx:id="checkerboard" hgap="8.0" vgap="8.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" halignment="CENTER"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" halignment="CENTER"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" halignment="CENTER"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" halignment="CENTER"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" valignment="CENTER"/>
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" valignment="CENTER"/>
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" valignment="CENTER"/>
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" valignment="CENTER"/>
            </rowConstraints>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
    </padding>
</VBox>
